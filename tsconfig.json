{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "modules/*": [ "modules/*" ],
            "@/*": [ "modules/*" ]
        },
        "outDir": "dist",

        "module": "ES2020",
        "target": "ES2020",
        "moduleResolution": "node",
        "esModuleInterop": true,

        "noImplicitAny": false,
        "allowJs": true,
        "keyofStringsOnly": true,
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "include": [
        "lib",
        "modules",
        "main.ts"
    ]
}
