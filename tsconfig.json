{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "modules/*": [ "modules/*" ],
            "@/*": [ "modules/*" ]
        },
        "outDir": "dist",

        "module": "ES2015",
        "target": "ES2018",
        "moduleResolution": "node",

        "esModuleInterop": true,
        "removeComments": true,
        "declaration": false,
        "declarationMap": false,
        "sourceMap": true,

        "noImplicitAny": false,
        "allowJs": true,
        "keyofStringsOnly": true,
        "typeRoots": [
            "./node_modules/@types"
        ],

        "lib": [
          "ES2015",
          "DOM"
        ]
    },
    "include": [
        "lib",
        "modules",
        "main.ts"
    ]
}
